{
    "compilerOptions": {
      "target": "ES2023",
      "module": "ESNext",
      "declaration": true,           
      "outDir": "./dist",               
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],        
    "exclude": ["node_modules"]
  }